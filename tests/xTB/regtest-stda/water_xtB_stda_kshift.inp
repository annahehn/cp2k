&GLOBAL
  PROJECT h2o
  RUN_TYPE ENERGY
  PRINT_LEVEL LOW
  PREFERRED_DIAG_LIBRARY SL
&END GLOBAL
&FORCE_EVAL
  METHOD Quickstep
  &PROPERTIES
    &TDDFPT
       KERNEL sTDA
       &sTDA
          FRACTION 0.25
          MATAGA_NISHIMOTO_CEXP  0.2
          MATAGA_NISHIMOTO_XEXP  0.2
          DO_EWALD F
          DIAG_SHIFT_ORIG T
          DIAG_SHIFT_DELTA 0.5
          DIAG_SHIFT_SIGMA 0.1
          SHIFT_OUTPUT T
       &END sTDA
       NLUMO -1
       NSTATES     16
       MAX_ITER    100
       CONVERGENCE [eV] 1.0e-7
    &END TDDFPT
  &END PROPERTIES
  &DFT
    &POISSON
      PERIODIC NONE
      POISSON_SOLVER WAVELET
    &END POISSON
    &QS
   EPS_DEFAULT 1.0E-15
       METHOD xTB
       &xTB
         DO_EWALD F
       &END
    &END QS
    &SCF
      SCF_GUESS RESTART
      MAX_SCF 20
      EPS_SCF 1.E-7
      &OUTER_SCF
         MAX_SCF 200
         EPS_SCF 1.E-7
      &END
      &OT ON
        MINIMIZER DIIS
        PRECONDITIONER FULL_SINGLE_INVERSE
      &END OT
    &END SCF
  &END DFT
  &SUBSYS
    &CELL
      ABC 20.0 20.0 20.0
      PERIODIC NONE
    &END CELL
    &COORD
   UNIT BOHR
 O   0.00000000000000      0.00000000000000     -0.12178983933899
 H   1.41713420892173      0.00000000000000      0.96657854674257
 H  -1.41713420892173      0.00000000000000      0.96657854674257
    &END COORD
  &END SUBSYS
&END FORCE_EVAL
